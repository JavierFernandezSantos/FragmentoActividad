<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentoJugada">

    <TextView
        android:id="@+id/textotitulo"
        android:layout_width="296dp"
        android:layout_height="151dp"
        android:gravity="center_vertical"
        android:text="JUGADA"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />

    <Button
        android:id="@+id/botonJugada"
        android:layout_width="165dp"
        android:layout_height="92dp"
        android:layout_marginTop="96dp"
        android:onClick="botonPulsado"
        android:text="Generar Jugada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoMostrarJugada" />

    <TextView
        android:id="@+id/textoMostrarJugada"
        android:layout_width="296dp"
        android:layout_height="151dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="Jugada Aleatoria"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/textotitulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textotitulo"
        app:layout_constraintTop_toBottomOf="@+id/textotitulo" />

</androidx.constraintlayout.widget.ConstraintLayout>